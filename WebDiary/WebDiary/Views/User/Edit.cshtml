@model EditUserViewModel

<form asp-action="Edit" asp-controller="User">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <input type="hidden" asp-for="Email" class="form-control" />
    <div class="form-group">
        <label asp-for="UserName" class="control-label">Username (also login)</label>
        <input type="text" asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
            <input type="submit" value="Save" class="btn btn-sm btn-success" />
            <a class="btn btn-sm btn-primary" asp-action="Index">Back</a>
    </div>
</form>