@using Microsoft.AspNetCore.Identity
@model ChangeRoleViewModel
@{
    ViewBag.Title = "Edit user role";
}

<h2>Change role for @Model.UserEmail</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach (IdentityRole role in Model.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name"
            @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />

            @role.Name <br />
        }
        <label></label>
    </div>

    <button type="submit" class="btn btn-sm btn-success">Save</button>
    <a class="btn btn-sm btn-primary" asp-controller="Manage" asp-action="Index">Back</a>
</form>