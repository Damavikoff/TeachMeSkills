@model IEnumerable<WebDiary.DAL.Models.User>


<h2>Список пользователей</h2>
@*await Html.PartialAsync("UserListPartial")*@
<form>
    <p>
        Email: <input type="text" /> @*asp-for="SearchString" />*@
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.UserName</td>
            <td>
                <form asp-controller="Manage" asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-controller="Manage" asp-action="Edit" asp-route-id="@user.Id">Редактировать</a>
                    <a class="btn btn-sm btn-primary" asp-controller="Manage" asp-action="ChangePassword" asp-route-id="@user.Id">Сменить пароль</a>
                    <a class="btn btn-sm btn-success" asp-action="Edit" asp-route-userid="@user.Id">Права доступа</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
            <td>
                
            </td>
        </tr>
    }
</table>
<a class="btn btn-sm btn-primary" asp-action="Index">Назад</a>