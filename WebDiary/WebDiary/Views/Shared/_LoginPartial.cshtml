@using Microsoft.AspNetCore.Identity
@using WebDiary.DAL.Models;
@using System.Security.Claims;
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav flex-grow-1">
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Event" asp-action="Index">Calendar</a>
    </li>
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark">Manage groups</a>
            <ul>
                <li><a onclick="ShowNewGroupModal()">New</a></li>
                <li><a onclick="ShowExistGroupModal()">Exist</a></li>
            </ul>
        </li>
    }

</ul>

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Event", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
<div id="new-group-modal-partial"> </div>
<div id="exist-group-modal-partial"> </div>
<script>

    function ShowNewGroupModal() {
        $.ajax({
            type: "GET",
            url: "/Group/NewGroupPartial",
            dataType: 'html',
            success: function (data) {
                $('#new-group-modal-partial').html(data);
                $('#createGroupModal').modal('show');
            }
        });
    }

    function ShowExistGroupModal() {
        $.ajax({
            type: "GET",
            url: "/Group/ExistGroupPartial",
            dataType: 'html',
            success: function (data) {
                $('#exist-group-modal-partial').html(data);
                $('#editGroupModal').modal('show');
            }
        });
    }
</script>