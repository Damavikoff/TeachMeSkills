                        <h6 class="mt-5 mb-3 text-center"><a href="#" class="text-dark">Write Your Comment</a></h6>
                        <hr>
                        <form asp-action="Comment" asp-controller="Post">
                            <div class="form-row">
                                <div class="col-12 form-group">
                                    <label class="form-control-label" asp-for="@Model.Comment.Content">Content</label>
                                    <input type="text" class="form-control" asp-for="@Model.Comment.Content">
                                </div>
                                <div class="col-sm-4 form-group">
                                    <label class="form-control-label" asp-for="@Model.Comment.Name">Name</label>
                                    <input type="text" class="form-control" asp-for="@Model.Comment.Name">
                                </div>
                                <input type="hidden" class="form-control" asp-for="@Model.Comment.ArticleId" value="@Model.Id">
                                <div class="form-group col-12">
                                    <input type="submit" value="Write Comment" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>